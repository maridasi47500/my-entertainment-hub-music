<%= form_with(model: musicrelease) do |form| %>
  <% if musicrelease.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(musicrelease.errors.count, "error") %> prohibited this musicrelease from being saved:</h2>

      <ul>
        <% musicrelease.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, Musiccat.all.collect {|g|[g.name, g.id]} %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div>
    <%= form.label :pic, style: "display: block" %>
    <%= form.file_field :pic %>
  </div>
    <%= form.fields_for :songs, musicrelease.songs do |address_form| %>
      <%= address_form.text_field :title, placeholder: "title" %>
      <%= address_form.text_field :artist, placeholder: "artist" %>
    <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
