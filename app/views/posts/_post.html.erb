<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="/uploads/<%=post.pic%>" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=link_to post.title, post%></h5>
        <p class="card-text"><%=post.content%></p>
        <p class="card-text"><small class="text-body-secondary">Dernier edit il y a  <%=time_ago_in_words(post.updated_at)%></small></p>
        <p class="card-text"><%=link_to "lire plus", post%> - Written by : <strong><%=post.written_by%></strong></p>

      </div>
    </div>
  </div>
</div>
