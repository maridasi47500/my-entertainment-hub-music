  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div>
    <%= form.label :myname, style: "display: block" %>
    <%= form.text_field :myname %>
  </div>

  <div>
    <%= form.label :cat_id, style: "display: block" %>
    <%= form.select :cat_id, Moviecat.all.collect {|g|[g.name, g.id]} %>
  </div>

  <div>
    <%= form.label :pic, style: "display: block" %>
    <%= form.file_field :pic %>
  </div>

  <div>
    <%= form.label :link, style: "display: block" %>
    <%= form.text_field :link %>
  </div>

  <div>
    <%= form.submit %>
